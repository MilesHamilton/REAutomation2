# REAutomation2 Environment Variables Template

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_0
LLM_MAX_CONCURRENT=5
LLM_GPU_MEMORY_LIMIT=6144

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# 11Labs Configuration (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_MODEL=eleven_turbo_v2
ELEVENLABS_VOICE=your_preferred_voice_id

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reautomation2
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Voice Configuration
TTS_ENGINE=local
STT_MODEL=whisper-small
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Call Configuration
MAX_CONCURRENT_CALLS=5
CALL_TIMEOUT=300
QUALIFICATION_THRESHOLD=0.8
TIER_ESCALATION_THRESHOLD=0.7

# Cost Controls
DAILY_BUDGET=50.00
COST_PER_CALL_LIMIT=0.10
MONTHLY_CALL_LIMIT=5000

# Monitoring
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
INPUT_SPREADSHEET_ID=your_input_spreadsheet_id
OUTPUT_SPREADSHEET_ID=your_output_spreadsheet_id
SHEETS_ENABLED=true

